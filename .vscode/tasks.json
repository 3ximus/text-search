{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"command": "sh",
	"isShellCommand": true,
	"showOutput": "always",
	"args": [
		"-c"
	],
	"tasks": [
		{
			"taskName": "make",
			"suppressTaskName": true,
			"isBuildCommand": true,
			"args": [
				"\"make\""
			]
		},
		{
			"taskName": "run_tests",
			"suppressTaskName": true,
			"args": [
				"\"./run_tests.sh\""
			]
		}
	]
}